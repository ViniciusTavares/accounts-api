{
  "name": "accounts-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc --build tsconfig.json",
    "start": "node build/src",
    "start:dev": "node -r dotenv/config -r ts-node/register src",
    "start:docker:dev": "npm run db:seed && node -r dotenv/config -r ts-node/register src",   
    "db:migrate:up": "npm run build && migrate-mongo up -f 'build/infrastructure/storage/migrations/config.js'",
    "db:migrate:up:local": "npm run build && migrate-mongo up -f 'build/infrastructure/storage/migrations/config.js'",
    "db:migrate:create": "npx migrate-mongo create",
    "db:seed": "node -r dotenv/config -r ts-node/register db/seeds/seed.ts",
    "test": "node_modules/.bin/jest tests",
    "test:unit": "node_modules/.bin/jest tests/unit",
    "lint": "eslint ./{src,test}/**/*.ts",
    "lint:fix": "eslint ./{src,test}/**/*.ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.11.6",
    "@types/koa-pino-logger": "^3.0.0",
    "@types/koa__router": "^8.0.4",
    "@types/mongodb": "^3.5.14",
    "@types/request-promise": "^4.1.46",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-airbnb-typescript": "7.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "env-var": "^7.0.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-pino-logger": "^3.0.0",
    "migrate-mongo": "^8.2.2",
    "mongo-seeding": "^3.6.0",
    "mongodb": "^3.6.5",
    "pino-pretty": "^4.5.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.(js|ts)"
    ]
  }
}
