{
  "name": "accounts-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc --build tsconfig.json",
    "start": "node build/src/app",
    "start:dev": "node -r dotenv/config -r ts-node/register src/app",
    "migration:create": "npm mongo-migrate create",
    "test:unit": "node_modules/.bin/jest tests/unit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.11.6",
    "@types/koa-pino-logger": "^3.0.0",
    "@types/koa__router": "^8.0.4",
    "@types/mongodb": "^3.5.14",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "env-var": "^7.0.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-pino-logger": "^3.0.0",
    "migrate-mongo": "^8.2.2",
    "mongodb": "^3.6.5",
    "pino-pretty": "^4.5.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.(js|ts)"
    ]
  }
}
